Options +FollowSymLinks -MultiViews
RewriteEngine On
RewriteBase /Online_grading_systems/

# Allow PHP files
<FilesMatch "\.php$">
    Require all granted
</FilesMatch>

# Error Documents
ErrorDocument 404 /Online_grading_systems/error.php?type=404
ErrorDocument 403 /Online_grading_systems/error.php?type=403
ErrorDocument 500 /Online_grading_systems/error.php?type=500

# Security Headers
<IfModule mod_headers.c>
    Header set X-Content-Type-Options "nosniff"
    Header set X-Frame-Options "SAMEORIGIN"
    Header set X-XSS-Protection "1; mode=block"
</IfModule>

# PHP Settings
<IfModule mod_php.c>
    php_value upload_max_filesize 10M
    php_value post_max_size 10M
    php_value max_execution_time 300
    php_value max_input_time 300
    php_flag display_errors on
    php_value error_reporting E_ALL
</IfModule>

# Allow access to assets
<FilesMatch "\.(css|js|png|jpg|jpeg|gif|ico|svg|woff|woff2|ttf|eot)$">
    Require all granted
</FilesMatch> 